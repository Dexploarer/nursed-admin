{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nursed-admin",
  "version": "0.1.0",
  "identifier": "com.nursed.admin",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "NursEd Admin",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "blob:", "data:", "filesystem:", "ws:", "wss:", "http:", "https:", "tauri:", "asset:"],
        "script-src": ["'self'", "'unsafe-eval'", "'unsafe-inline'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "blob:", "asset:", "https:", "tauri:"],
        "connect-src": ["ipc:", "http://ipc.localhost"]
      },
      "dangerousDisableAssetCspModification": ["style-src"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
